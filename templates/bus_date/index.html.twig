{% extends 'base.html.twig' %}

{% block title %}BusDate index{% endblock %}

{% block body %}
    <h1>BusDate index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PlaceRestantes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bus_date in bus_dates %}
            <tr>
                <td>{{ bus_date.id }}</td>
                <td>{{ bus_date.placeRestantes }}</td>
                <td>
                    <a href="{{ path('app_bus_date_show', {'id': bus_date.id}) }}">show</a>
                    <a href="{{ path('app_bus_date_edit', {'id': bus_date.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_bus_date_new') }}">Create new</a>
{% endblock %}
