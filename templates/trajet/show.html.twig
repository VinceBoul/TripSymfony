{% block title %}Trajet{% endblock %}

{% block body %}
    <h1>Trajet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trajet.id }}</td>
            </tr>
            <tr>
                <th>StartHour</th>
                <td>{{ trajet.startHour ? trajet.startHour|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndHour</th>
                <td>{{ trajet.endHour ? trajet.endHour|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>StartLoc</th>
                <td>{{ trajet.startLoc }}</td>
            </tr>
            <tr>
                <th>EndLoc</th>
                <td>{{ trajet.endLoc }}</td>
            </tr>
